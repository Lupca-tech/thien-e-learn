<%= form_for ChatMessage.new ,remote: true do |f| %>
  <div class="row">
    <div class="col-md-10">
  <div class="input-group">
    <%= f.text_field :content, placeholder: "Type Messages ...", class: "form-control" %>
  </div> 

    <div class="field">
      <%= f.hidden_field :teacher_id, :value => current_teacher&.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :student_id, :value => current_teacher&.id %>
    </div>
  <div class="field">
    <%= f.hidden_field :subject_id, :value => @subject.id %>
  </div>
  </div>
  <div class="col-md-2">
  <span class="input-group-append">
    <%= f.submit "send",class: "btn btn-warning"  %>
  </span>
  </div>
</div>
<% end %>