<%= form_for ChatMessage.new ,remote: true do |f| %>
  <div class="input-group">
    <%= f.text_field :content, placeholder: "Type Messages xxx", class: "form-control" %>
  </div> 

    <div class="field">
      <%= f.hidden_field :teacher_id, :value => @teacher_id %>
    </div>
    <div class="field">
      <%= f.hidden_field :student_id, :value => @student_id%>
    </div>
  <div class="field">
  
    <%= f.hidden_field :subject_id,:value =>@subject.id %>
  </div>
  <span class="input-group-append">
    <%= f.submit "send",class: "btn btn-warning"  %>
  </span>
<% end %>