<%= form_with(url: students_countdown_path(countdown), model: countdown) do |form| %>
  <% if countdown.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(countdown.errors.count, "error") %> prohibited this countdown from being saved:</h2>

      <ul>
        <% countdown.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time, default: {hour: countdown.time.strftime('%H'), min: countdown.time.strftime('%M')} %>
  </div>

  <div class="form-check form-switch">
    <%= form.check_box :status, { class: "form-check-input" }, true, false %>
    <label class="form-check-label" for="status">Bặt hẹn giờ.</label>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
